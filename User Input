print("Here you can add two numbers")
x = float(input("Your first Number: "))
y = float(input("your second number: "))
print(x + y)

print("A basic Calculator")
x = float(input("Your first Number: "))
y = float(input("your second number: "))
o = input("What do you want to do with these numbers? ")

if o == "add":
  print(x + y)
elif o == "subtract":
  print(x - y)
elif o == "multiply":
  print(x * y)
elif o == "divide":
  print(x / y)
else:
  print("Operator no acceptable")
